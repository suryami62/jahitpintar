@implements IDisposable
@inject NavigationManager NavigationManager

<!-- Desktop/Tablet Sidebar Navigation -->
<div class="d-none d-md-flex flex-column flex-shrink-0 bg-primary bg-opacity-10 border-end" style="width: 4.5rem; height: 100vh; backdrop-filter: blur(10px);">
    <a href="/" class="d-block p-3 link-body-emphasis text-decoration-none text-center" data-bs-toggle="tooltip"
       data-bs-placement="right" data-bs-original-title="JahitPintar">
        <i class="bi bi-scissors fs-3 text-primary"></i>
        <span class="visually-hidden">JahitPintar</span>
    </a>
    <ul class="nav nav-pills nav-flush flex-column mb-auto text-center">
        <AuthorizeView>
            <NotAuthorized>
                <li class="nav-item">
                    <NavLink class="nav-link py-3 border-bottom rounded-0 link-secondary" href="Account/Login" data-bs-toggle="tooltip"
                             data-bs-placement="right" aria-label="Masuk" data-bs-original-title="Masuk"
                             Match="NavLinkMatch.All">
                        <i class="bi bi-box-arrow-in-right fs-4"></i>
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link py-3 border-bottom rounded-0 link-secondary" href="Account/Register"
                             data-bs-toggle="tooltip" data-bs-placement="right" aria-label="Daftar"
                             data-bs-original-title="Daftar">
                        <i class="bi bi-person-plus fs-4"></i>
                    </NavLink>
                </li>
            </NotAuthorized>
            <Authorized>
                <li class="nav-item">
                    <NavLink class="nav-link py-3 border-bottom rounded-0 link-secondary" href="customers" data-bs-toggle="tooltip"
                             data-bs-placement="right" aria-label="Data Pelanggan"
                             data-bs-original-title="Data Pelanggan">
                        <i class="bi bi-people fs-4"></i>
                    </NavLink>
                </li>
            </Authorized>
        </AuthorizeView>
    </ul>

    <AuthorizeView>
        <Authorized>
            <div class="dropdown border-top mt-auto">
                <a href="#"
                   class="d-flex align-items-center justify-content-center p-3 link-body-emphasis text-decoration-none dropdown-toggle"
                   data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-person-circle fs-4 text-primary"></i>
                </a>
                <ul class="dropdown-menu text-small shadow dropdown-menu-end">
                    <li><a class="dropdown-item" href="Account/Manage">
                        <i class="bi bi-person me-2"></i>Profil (@context.User.Identity?.Name)
                    </a></li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>
                    <li>
                        <form action="Account/Logout" method="post">
                            <AntiforgeryToken/>
                            <input type="hidden" name="ReturnUrl" value="@_currentUrl"/>
                            <button type="submit" class="dropdown-item">
                                <i class="bi bi-box-arrow-right me-2"></i>Keluar
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </Authorized>
    </AuthorizeView>
</div>

<!-- Mobile Bottom Navigation -->
<nav class="d-md-none navbar navbar-dark bg-primary navbar-expand fixed-bottom shadow-lg">
    <ul class="navbar-nav nav-justified w-100">
        <AuthorizeView>
            <NotAuthorized>
                <li class="nav-item">
                    <NavLink class="nav-link d-flex flex-column align-items-center py-2" href="Account/Login"
                             aria-label="Masuk">
                        <i class="bi bi-box-arrow-in-right fs-5 mb-1"></i>
                        <span class="small d-block text-truncate">Masuk</span>
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link d-flex flex-column align-items-center py-2" href="Account/Register"
                             aria-label="Daftar">
                        <i class="bi bi-person-plus fs-5 mb-1"></i>
                        <span class="small d-block text-truncate">Daftar</span>
                    </NavLink>
                </li>
            </NotAuthorized>
            <Authorized>
                <li class="nav-item">
                    <NavLink class="nav-link d-flex flex-column align-items-center py-2" href="customers"
                             aria-label="Data Pelanggan">
                        <i class="bi bi-people fs-5 mb-1"></i>
                        <span class="small d-block text-truncate">Data Pelanggan</span>
                    </NavLink>
                </li>
                <li class="nav-item">
                    <div class="nav-link d-flex flex-column align-items-center dropup position-relative" style="cursor: pointer;">
                        <i class="bi bi-person-circle fs-5 mb-1"></i>
                        <span class="small d-block text-truncate">Profil</span>
                        <a class="dropdown-toggle position-absolute top-0 start-0 w-100 h-100 rounded"
                           style="text-decoration: none; color: inherit;" data-bs-toggle="dropdown"
                           aria-expanded="false">
                            <span class="visually-hidden">Menu Profil</span>
                        </a>
                        <ul class="dropdown-menu dropup-menu text-small shadow dropdown-menu-end">
                            <li><a class="dropdown-item" href="Account/Manage">
                                <i class="bi bi-person me-2"></i>@context.User.Identity?.Name
                            </a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                                <form action="Account/Logout" method="post">
                                    <AntiforgeryToken/>
                                    <input type="hidden" name="ReturnUrl" value="@_currentUrl"/>
                                    <button type="submit" class="dropdown-item">
                                        <i class="bi bi-box-arrow-right me-2"></i>Keluar
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </li>
            </Authorized>
        </AuthorizeView>
    </ul>
</nav>

@code {
    private string? _currentUrl;

    protected override void OnInitialized()
    {
        _currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        _currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }

}