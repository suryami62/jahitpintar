@implements IDisposable
@inject NavigationManager NavigationManager

<div class="d-flex flex-column flex-shrink-0 bg-body-tertiary" style="width: 4.5rem; height: 100vh;">
    <a href="/" class="d-block p-3 link-body-emphasis text-decoration-none" data-bs-toggle="tooltip"
       data-bs-placement="right" data-bs-original-title="JahitPintar">
        <i class="bi bi-scissors fs-3"></i>
        <span class="visually-hidden">JahitPintar</span>
    </a>
    <ul class="nav nav-pills nav-flush flex-column mb-auto text-center">
        <li class="nav-item">
            <NavLink class="nav-link py-3 border-bottom rounded-0" href="" Match="NavLinkMatch.All"
                     data-bs-toggle="tooltip" data-bs-placement="right" aria-label="Home" data-bs-original-title="Home">
                <i class="bi bi-house fs-4"></i>
            </NavLink>
        </li>
        <li class="nav-item">
            <NavLink class="nav-link py-3 border-bottom rounded-0" href="ocr" data-bs-toggle="tooltip"
                     data-bs-placement="right" aria-label="OCR" data-bs-original-title="OCR">
                <i class="bi bi-file-text fs-4"></i>
            </NavLink>
        </li>
        <AuthorizeView>
            <Authorized>
                <li class="nav-item">
                    <NavLink class="nav-link py-3 border-bottom rounded-0" href="customers" data-bs-toggle="tooltip"
                             data-bs-placement="right" aria-label="Data Pelanggan"
                             data-bs-original-title="Data Pelanggan">
                        <i class="bi bi-people fs-4"></i>
                    </NavLink>
                </li>
            </Authorized>
            <NotAuthorized>
                <li class="nav-item">
                    <NavLink class="nav-link py-3 border-bottom rounded-0" href="Account/Login" data-bs-toggle="tooltip"
                             data-bs-placement="right" aria-label="Login" data-bs-original-title="Login">
                        <i class="bi bi-box-arrow-in-right fs-4"></i>
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link py-3 border-bottom rounded-0" href="Account/Register"
                             data-bs-toggle="tooltip" data-bs-placement="right" aria-label="Register"
                             data-bs-original-title="Register">
                        <i class="bi bi-person-plus fs-4"></i>
                    </NavLink>
                </li>
            </NotAuthorized>
        </AuthorizeView>
    </ul>

    <AuthorizeView>
        <Authorized>
            <div class="dropdown border-top">
                <a href="#"
                   class="d-flex align-items-center justify-content-center p-3 link-body-emphasis text-decoration-none dropdown-toggle"
                   data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-person-circle fs-4"></i>
                </a>
                <ul class="dropdown-menu text-small shadow">
                    <li><a class="dropdown-item" href="Account/Manage">Profile (@context.User.Identity?.Name)</a></li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>
                    <li>
                        <form action="Account/Logout" method="post">
                            <AntiforgeryToken/>
                            <input type="hidden" name="ReturnUrl" value="@_currentUrl"/>
                            <button type="submit" class="dropdown-item">Sign out</button>
                        </form>
                    </li>
                </ul>
            </div>
        </Authorized>
    </AuthorizeView>
</div>

@code {
    private string? _currentUrl;

    protected override void OnInitialized()
    {
        _currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        _currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }

}