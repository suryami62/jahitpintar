@page "/customers"
@attribute [Authorize]
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject UserManager<ApplicationUser> UserManager
@inject ICustomerService CustomerService
@rendermode InteractiveServer

<PageTitle>Data Pelanggan</PageTitle>

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
        <div class="d-flex flex-column">
            <h1 class="h2 mb-1 fw-bold text-primary">Data Pelanggan</h1>
            <small class="text-muted">Kelola informasi lengkap pelanggan Anda</small>
        </div>
        <a href="/customers/add" class="btn btn-success btn-lg d-flex align-items-center gap-2 shadow-sm">
            <i class="bi bi-person-plus"></i> Tambah Pelanggan
        </a>
    </div>

    @if (_isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="text-center">
                <div class="spinner-border text-primary mb-3" role="status" style="width: 3rem; height: 3rem;">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="text-muted mb-0">Memuat data pelanggan...</p>
            </div>
        </div>
    }
    else if (_user == null)
    {
        <div class="alert alert-danger border-0 shadow-sm">
            <div class="d-flex align-items-center gap-3">
                <i class="bi bi-exclamation-triangle-fill fs-4"></i>
                <div>
                    <h6 class="alert-heading mb-1">Error: User tidak ditemukan</h6>
                    <p class="mb-0">Silakan login kembali untuk mengakses data pelanggan.</p>
                </div>
            </div>
        </div>
    }
    else if (_customers == null || !_customers.Any())
    {
        <div class="text-center py-5">
            <div class="bg-light rounded-4 p-5 mx-auto" style="max-width: 500px;">
                <i class="bi bi-people text-muted" style="font-size: 4rem;"></i>
                <h4 class="text-muted mt-3 mb-2">Belum Ada Data Pelanggan</h4>
                <p class="text-muted mb-4">Mulai dengan menambahkan pelanggan pertama Anda!</p>
                <a href="/customers/add" class="btn btn-success btn-lg d-inline-flex align-items-center gap-2">
                    <i class="bi bi-person-plus"></i> Tambah Pelanggan Pertama
                </a>
            </div>
        </div>
    }
    else
    {
        <!-- Customer Table Card -->
        <div class="card shadow-sm border-0 rounded-4">
            <div class="card-header bg-primary bg-opacity-10 border-0 py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold text-primary d-flex align-items-center gap-2">
                        <i class="bi bi-table"></i>Daftar Pelanggan
                    </h5>
                    <span class="badge bg-primary bg-opacity-20 text-primary px-3 py-2">
                        @_customers.Count() Pelanggan
                    </span>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="fw-bold px-4 py-3">Nama Pelanggan</th>
                                <th class="fw-bold px-4 py-3">Informasi Kontak</th>
                                <th class="fw-bold px-4 py-3">Alamat</th>
                                <th class="fw-bold px-4 py-3 text-center">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var customer in _customers)
                            {
                                <tr class="align-middle">
                                    <td class="px-4 py-3">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3">
                                                <i class="bi bi-person text-primary"></i>
                                            </div>
                                            <div>
                                                <a href="/customers/details/@customer.Id" class="text-decoration-none fw-bold text-primary hover-primary">
                                                    @customer.Identity.Name
                                                </a>
                                                <div class="text-muted small">ID: @customer.Id.Substring(0, 8)...</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-4 py-3">
                                        <div class="mb-2">
                                            <a href="/customers/details/@customer.Id" class="text-decoration-none text-dark d-flex align-items-center gap-2">
                                                <i class="bi bi-telephone text-success"></i>
                                                <span class="fw-medium">@customer.Identity.PhoneNumber</span>
                                            </a>
                                        </div>
                                        @if (customer.Identity.SocialMediaPlatforms.Any())
                                        {
                                            <div class="d-flex flex-wrap gap-1">
                                                @foreach (var platform in customer.Identity.SocialMediaPlatforms)
                                                {
                                                    <span class="badge bg-info-subtle text-info-emphasis border border-info-subtle px-2 py-1" style="font-size: 0.75rem;">
                                                        <i class="bi bi-chat-dots me-1"></i>@platform
                                                    </span>
                                                }
                                            </div>
                                        }
                                    </td>
                                    <td class="px-4 py-3">
                                        <a href="/customers/details/@customer.Id" class="text-decoration-none text-dark d-flex align-items-center gap-2">
                                            <i class="bi bi-geo-alt text-warning"></i>
                                            <span class="text-truncate" style="max-width: 200px;" title="@customer.Identity.Address">
                                                @customer.Identity.Address
                                            </span>
                                        </a>
                                    </td>
                                    <td class="px-4 py-3 text-center">
                                        <div class="d-flex justify-content-center gap-2">
                                            <a href="/customers/edit/@customer.Id"
                                               class="btn btn-outline-warning btn-sm d-flex align-items-center gap-1"
                                               title="Edit Pelanggan">
                                                <i class="bi bi-pencil"></i>
                                                <span class="d-none d-md-inline">Edit</span>
                                            </a>
                                            <a href="/customers/details/@customer.Id"
                                               class="btn btn-outline-primary btn-sm d-flex align-items-center gap-1"
                                               title="Lihat Detail">
                                                <i class="bi bi-eye"></i>
                                                <span class="d-none d-md-inline">Detail</span>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<Customer>? _customers;
    private bool _isLoading = true;
    private ApplicationUser? _user;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var principal = authState.User;

            if (principal.Identity?.IsAuthenticated == true)
            {
                _user = await UserManager.GetUserAsync(principal);
                if (_user != null)
                {
                    _customers = await CustomerService.GetCustomersAsync(_user.Id);
                }
            }
        }
        catch (Exception ex)
        {
            // Handle error
            Console.WriteLine($"Error loading customers: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
        }
    }

}
